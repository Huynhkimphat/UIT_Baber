<link rel="stylesheet" href="/css/service.css">
<div class="container">
    <div class="row">
        {{#each product}}
        <div class="service_card col-12 col-md-6 col-lg-4 mt-4">
            <input type="checkbox" id="card{{MASP}}" class="more" aria-hidden="true">
            <div class="content">
                <div class="front" style="background-image: url('{{HINHANH}}')">
                    <div class="inner">
                        <h2>{{TENSANPHAM}}</h2>
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                        <p style="color:#fff; grid-row:4">Xuất Xứ : {{XUATXU}}</p>
                        <label for="card{{MASP}}" class="buttons btn-custom" aria-hidden="true">
                            Details
                        </label>
                    </div>
                </div>
                <div class="back">
                    <div class="inner">
                        <div class="description">
                            <p>{{MOTASANPHAM}}</p>
                        </div>
                        <div class="typeOfService">{{TENSANPHAM}}</div>
                        <div class="price">{{GIA}} VND</div>
                        <label for="card{{MASP}}" class="buttons booking_btn" aria-hidden="true">
                            <button class="buttons btn-outline-danger w-100">
                                <a href="#" style="text-decoration:none;">Buy Now</a></button>
                                <a href="/products/{{MASP}}/viewRating" style="text-decoration:none;">DANH GIA SAN PHAM</a>
                        </label>
                        <label for="card{{MASP}}" class="buttons btn-custom return btn-outline-danger w-100"
                            aria-hidden="true">
                            <i class="fas fa-arrow-left"></i>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>

<script>
    let x = document.querySelectorAll(".product-status")
    console.log(x);
    x.forEach(elem => {
        let remain = elem.getAttribute('data-id')
        elem.innerHTML = elem.getAttribute('data-id') == '0' ? 'Het hang (' + remain + ')' : 'Con hang (' + remain + ')';
    });


</script>

