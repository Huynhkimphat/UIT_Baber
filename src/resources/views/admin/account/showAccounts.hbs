<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã khách hàng</th>
            <th scope="col">Mã nhân viên</th>
            <th scope="col">Mã tài khoản</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    {{#each account}}
    <tbody>
        <tr>
            <th scope="row">{{MAKH}}</th>
            <th scope="row">{{MANV}}</th>
            <td>{{MATK}}</td>
            <td>{{EMAIL}}</td>
            <td>{{PASSWORD}}</td>
            <td>
                <a href="/account/{{MATK}}/edit" class="btn btn-link">Update</a>
            </td>
            <td>
                <a href=" " class="btn btn-link" data-bs-toggle="modal" data-bs-target="#deleteRecord"
                    data-id={{MATK}}>Delete
                </a>
            </td>
        </tr>
    </tbody>
    {{/each}}
</table>
<button class="btn btn-primary"><a href="/account/add">Add</a></button>
{{!-- Delete Model --}}
<div class="modal fade" id="deleteRecord" tabindex="-1" aria-labelledby="deleteRecordLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteRecordLabel">Delete account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to delete account?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-warning" id="btn-delete-account">Yes</button>
            </div>
        </div>
    </div>
</div>
{{!-- Delete hidden Form --}}
<form name="delete-account-form" method="POST" action=""></form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let accountId;
        let deleteForm = document.forms['delete-account-form'];
        let btnDeleteAccount = document.getElementById('btn-delete-account');

        // When dialog confirm clicked
        $('#deleteRecord').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            accountId = button.data('id');
        });

        // When delete button clicked
        btnDeleteAccount.onclick = function () {
            deleteForm.action = '/account/' + accountId + '?_method=DELETE';
            deleteForm.submit();
        };
    })
</script>