<link rel="stylesheet" href="/css/Adding_Update.css">


<body>
    <div class="form-body">
        <div class="row">
            <div class="form-holder">   
                <div class="form-content">
                    <div class="form-items">
                        <h3>Update ProductType {{productType.MALSP}}</h3>
                        <form class="requires-validation" method="POST" action="/productType/{{productType.MALSP}}/edit">
                            <span class="items-group">
                                <div class="col-sm-16 mt-3">Tên loại sản phẩm: 
                                    <input class="form-control" type="text" id="name" name="name" placeholder="Name" value="{{productType.TENLOAISANPHAM}}" required>
                                    <div class="valid-feedback">This field is valid!</div>
                                </div>
                            </span>
                            <br>
                            <span class="items-group">
                                <div class="col-sm-16 mt-3">TÌnh trạng: 
                                    <input class="form-control" type="text" name="status" id="status" width="full" value="{{productType.TINHTRANG}}" required>
                                    <div class="valid-feedback">This field is valid!</div>
                                </div>
                            </span>
                            <br><br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label">I confirm that all data are correct</label>
                                <div class="invalid-feedback">Please confirm that the entered data are all correct!</div>
                            </div>


                            <span class="items-group">
                                <div class="col-sm-8 form-button mt-3">
                                    <button id="Adding" type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </span>
                            <br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/js/submitForm.js"></script>
