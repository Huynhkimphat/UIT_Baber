<link rel="stylesheet" href="/css/booking.css">

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Ngày</th>
            <th scope="col">Khung giờ</th>
            <th scope="col">Khách hàng</th>
            <th scope="col">Nhân viên</th>
            <th scope="col">Chi Tiết</th>
            <th scope="col">Update</th>
            {{!-- <th scope="col">Delete</th> --}}
        </tr>
    </thead>
    {{#each booking}}
    <tbody>
        <tr>
            <td scope="row">{{DAY}}/{{MONTH}}/{{YEAR}}</td>
            <td scope="row">{{KHUNGGIO}}</td>
            <td scope="row">{{HO}} {{TEN}}</td>
            <td scope="row">{{HO_1}} {{TEN_1}}</td>
            <td>
                <a href="/booking/{{MADL}}/showDetail" class="btn btn-link">Chi tiết</a>
            </td>
            <td>
                <a href="/booking/{{MADL}}/edit" class="btn btn-link">Update</a>
            </td>
            {{!-- <td>
                <a href=" " class="btn btn-link" data-bs-toggle="modal" data-bs-target="#deleteRecord"
                    data-id={{MADL}}>Delete
                </a>
            </td> --}}
        </tr>   
    </tbody>

    {{/each}}

</table>
