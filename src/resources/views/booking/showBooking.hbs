{{!-- Delete hidden Form --}}
<form name="delete-booking-form" method="POST" action=""></form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let bookingId;
        let deleteForm = document.forms['delete-booking-form'];
        let btnDeleteBooking = document.getElementById('btn-delete-booking');

        // When dialog confirm clicked
        $('#deleteRecord').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            bookingId = button.data('id');
        });

        // When delete button clicked
        btnDeleteBooking.onclick = function () {
            deleteForm.action = '/booking/' + bookingId + '?_method=DELETE';
            deleteForm.submit();
        };
    })
</script> 