<link rel="stylesheet" href="/css/booking.css">
<div class="mt-4 ">
    <h3>Add Booking</h3>
    <form class="mt-4" method="POST" action="/booking/?_method=PUT">
        <div class="form-group">
            <label for="date">Date :</label>
            <p class="booking_type">
            {{#each day}}
                <label><input type="radio" name="date" value="{{0}}"><span>{{0}}</span></label>
            {{/each}}
            </p>
        </div>
        <div class="form-group">
            <label for="time">Time :</label>
            <p class="booking_type">
            {{#each timePeriod}}
                <label><input type="radio" name="time" value="{{0}}" onclick="addEmployee()"><span>{{1}}</span></label>
            {{/each}}
            </p>
        </div>
        <div class="form-group">
            <label for="serviceName">Service:</label>
                <p class="booking_type">
                {{#each serviceName}}
                    <label><input type="radio" name="service" value="{{0}}"><span>{{1}}</span></label>
                {{/each}}
                </p>
        </div>
        <div id="addEmployee"></div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
<script>
    function addEmployee() {
        let cform = '<label for="employee">employee:</label>'
                +'<p class="booking_type">'
                +'{{#each employeeName}}'
                +'    <label><input type="radio" name="employee" value="{{0}}" ><span>{{1}} {{2}}</span></label>'
                +'{{/each}}'
                +'</p>';
        document.getElementById("addEmployee").innerHTML = cform;
    }
</script>
