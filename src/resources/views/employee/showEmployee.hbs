<div class="card" style="width: 18rem;">
    {{#each employee}}
    <img class="card-img-top" src="..." alt="cái mặt tk nhân viên chỗ đây nè">
    <div class="card-body">
        <h5 class="card-title">{{1}} {{2}}</h5>
        <p class="card-text">Giới thiệu sương sương</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Mã nhân viên: {{0}}</li>
        <li class="list-group-item" type="date">Ngày sinh: {{3}}</li>
        <li class="list-group-item">Giới tính: {{4}}</li>
        <li class="list-group-item">Ngày vào làm: {{7}}</li>
        <li class="list-group-item">Loại nhân viên: {{8}}</li>
    </ul>
    <div class="card-body">
        <a href="https://fb.com/ldh2210" class="card-link">Facebook</a>
        <a href="#" class="card-link">{{5}}</a>
    </div>
    {{/each}}
</div>