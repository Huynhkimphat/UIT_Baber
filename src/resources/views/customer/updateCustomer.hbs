<link rel="stylesheet" href="/css/product.css">
<div class="mt-4 ">
    <h3>Update Customer:</h3>
    <form class="mt-4" method="POST" action="/customer/{{customer.MAKH}}/edit">
        <div>
            <label for="firstName">Họ: </label><br>
            <input type="text" name="firstName" id="firstName" width="full" value="{{customer.HO}} "><br>
        </div>
        <div>
            <label for="lastName">Tên: </label><br>
            <input type="text" name="lastName" id="lastName" width="full" value="{{customer.TEN}}"><br>
        </div>
        <div>
            <label for="DateOfBirth">Ngày sinh:</label><br>
            <input type="date" name="DateOfBirth" id="DateOfBirth" width="full" value="{{customer.NGAYSINH}}"><br>
        </div>
        <div>
            <label for="sex">Giới tính: </label>
            <select id="sex" name="sex">
                <option value="{{customer.GIOITINH}}">{{customer.GIOITINH}}</option>
                <option value="Nu">Nu</option>
                <option value="Unknown">Unknown</option>
                <option value="Nam">Nam</option>
            </select>
        </div>
        <div>
            <label for="phoneNumber">Số điện thoại: </label><br>
            <input type="text" name="phoneNumber" id="phoneNumber" width="full" value="{{customer.SODT}}"><br>
        </div>
        <div>
            <label for="address">Địa chỉ: </label><br>
            <input type="text" name="address" id="address" width="full" value="{{customer.DIACHI}}"><br>
        </div>
        <div>
            <label for="point">ĐIểm tích lũy: </label><br>
            <input  type="text" name="point" id="point" width="full" value="{{customer.DIEMTICHLUY}}" disabled="true"><br>
        </div>
        <div>
            <label for="img">Link ảnh: </label><br>
            <input type="text" name="img" id="img" width="full" value="{{customer.HINHANH}}"><br>
        </div>
        <div>
            <label for="email">Email:</label><br>
            <input type="text" name="email" id="email" width="full" value="{{customer.EMAIL}} "><br>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>